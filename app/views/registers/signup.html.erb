<h1>Registration</h1>

<%= form_for :register do |form| %>
 
  <fieldset>
    <legend>Your Registration Information</legend>
 	<br />
    <label for="username">Username:</label>
    <%= form.text_field :username %>
    <br />

   
    <label for="password">Password:</label>
    <%= form.password_field :password %>
    <br />
   
    <label for="q1">What the name of your best childhood ? </label>
    <%= form.text_field :q1 %>
    <br />
    <label for="q2">What is your favorit color?</label>
    <%= form.text_field :q2 %>
    <br />
     <label for="q3">What was the name of your first pet?</label>
    <%= form.text_field :q3 %>
    <br /><br />
   <div class="button">
    <%= submit_tag "Register", :class => "submit" %>
   </div>
  </fieldset>
 
<% end %>
